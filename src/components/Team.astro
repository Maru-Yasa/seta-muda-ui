---
const { items } = Astro.props;
---

<div class="grid grid-cols-2 md:grid-cols-4 gap-5 justify-center">
    {items?.sort((a, b) => a.index - b.index).map((i) => {        
        return (<div class="flex flex-col text-center justify-center items-center">
          <img
            src={i.profile}
            alt=""
            class="rounded-full w-32 h-32 object-cover mb-3"
          />
          <h2 class="text-lg font-semibold">{i.name}</h2>
          <h3 class="text-sm text-gray-500">{i.position}</h3>
        </div>)
    })}
</div>
